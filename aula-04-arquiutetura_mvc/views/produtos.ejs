<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

    <h1>Conheça os produtos:</h1>
        <!-- TAGS EJS CHAMANDO A VARIAVEL QUE VEIO DO INDEX.JS -->
        <%= produto %>

        <!-- Condição para verificar se o produto não foi passado  -->
        <!--  É igual ao php -->
        <% if (!produto) { %>
            <p> <%= listaProdutos %> </p> 
        <% } %>

        <!-- forEach para percorrer a lista de produtos  -->
        <% if(!produto) {%>
        <%  listaProdutos.forEach((produto) => { %>
            <p> <a href="/produtos/<%= produto %>"><%= produto %> </a></p>
            <% }) %>
        <% } %>
    <hr>
    <%- include ('partials/footer.ejs') %>