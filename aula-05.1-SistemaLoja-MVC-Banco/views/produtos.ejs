<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Cadastrar Produtos</h1>
                </div>
                <div class="card-body">
                    <form action="/produtos/new" method="post">
                        <label for="">Nome do Produto:</label>
                        <input class="form-control" type="text" name="nome" id="nomeInput"
                            placeholder="Insira o nome do produto" required>
                        <label for="">Preço do produto:</label>
                        <input class="form-control" type="text" name="preco" id="preco"
                            placeholder="Insira o Preço do produto" required>
                        <label for="">Categoria do produto:</label>
                        <input class="form-control" type="text" name="categoria" id="categoria"
                            placeholder="Insira a categoria" required>
                        <br>
                        <input type="submit" value="cadastrar" class="btn btn-success">
                    </form>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Produtos</h1>
                </div>
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nome:</th>
                                <th>Preço:</th>
                                <th>Categoria:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% produtos.forEach(produto=> { %>
                                <tr>
                                    <td><img src="imgs/product.png" width="30px"></td>
                                    <td>
                                        <%= produto.nome %>
                                    </td>
                                    <td>
                                        <%= produto.preco.toLocaleString('pt-br', {style: 'currency' , currency: 'BRL'
                                            }) %>
                                    </td>
                                    <td>
                                        <%= produto.categoria %>
                                    </td>
                                    <td>
                                        <a style="color: orange;" href="/produto/edit/<%= produto.id %>">Editar</a>
                                    </td>
                                    <td>
                                        <a style="color: red;" href="/produto/delete/<%= produto.id %>"
                                            onclick="return confirm('Deseja Realmente deletar o produto <%= produto.nome %>?')">Deletar</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include ('partials/footer.ejs') %>