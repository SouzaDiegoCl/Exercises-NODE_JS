<%- include ('partials/navbar.ejs') %>
    <%- include ('partials/header.ejs') %>
        <div class="container">
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Cadastrar Usuário</h2>
                </div>
                <div class="card-body">
                    <p style="color: red; font-size: 0.7em;">
                        É necessário estar logado para acessar os recursos do painel.
                    </p>
                    <form action="/createUser" method="post">
                        <label>E-mail:</label>
                        <input class="form-control" type="email" name="email" placeholder="email@exemplo.com"
                        name="email"
                            required><br>
                        <label>Senha:</label>
                        <input class="form-control" type="password" name="password" placeholder="Insira a senha"
                        name="password"
                            required><br>
                        <input class="btn btn-success" type="submit" value="Cadastrar">
                    </form>
                </div>
                <h6>Já possui conta? <a href="/login">Faça o login</a></h6>
            </div>
        </div>
<%- include ('partials/footer.ejs') %>