<%- include ('partials/navbar.ejs') %>
    <%- include ('partials/header.ejs') %>


        <div class="container">
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Login Usuário</h2>
                </div>
                <div class="card-body m-auto">
                    <p style="color: red; font-size: 0.7em;">
                        É necessário estar logado para acessar os recursos do painel.
                    </p>
                    <form action="/authenticate" method="post">
                        <label>E-mail:</label>
                        <input class="form-control" type="email" name="email" placeholder="email@exemplo.com"
                            required><br>
                        <label>Senha:</label>
                        <input class="form-control" type="password" name="password" placeholder="Insira a senha"
                            required><br>
                        <input class="btn btn-success" type="submit" value="Login">
                    </form>
                </div>
                <h6>Não possui conta? <a href="/cadastro">Faça o cadastro</a></h6>
            </div>
        </div>


        <%- include ('partials/footer.ejs') %>